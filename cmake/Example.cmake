set(CMAKE_AUTOMOC ON)
set(CMAKE_AUTOUIC ON)
set(CMAKE_AUTORCC ON)

find_package(QT NAMES Qt5 REQUIRED)
find_package(Qt${QT_VERSION_MAJOR} COMPONENTS Core Gui Widgets Network REQUIRED)
if("${CMAKE_BUILD_TYPE}" STREQUAL "Debug")
    find_library(QCUSTOMUI_LIB NAMES QCustomUid HINTS ${PROJECT_SOURCE_DIR}/lib/lib/x64)
elseif("${CMAKE_BUILD_TYPE}" STREQUAL "Release")
    find_library(QCUSTOMUI_LIB NAMES QCustomUi HINTS ${PROJECT_SOURCE_DIR}/lib/lib/x64)
elseif("${CMAKE_BUILD_TYPE}" STREQUAL "RelWithDebInfo")
    find_library(QCUSTOMUI_LIB NAMES QCustomUi HINTS ${PROJECT_SOURCE_DIR}/lib/lib/x64)
endif()
if(NOT QCUSTOMUI_LIB)
    message(FATAL_ERROR "QCUSTOMUI_LIB NOT FOUND:" "${CMAKE_BUILD_TYPE}")
endif(NOT QCUSTOMUI_LIB)
